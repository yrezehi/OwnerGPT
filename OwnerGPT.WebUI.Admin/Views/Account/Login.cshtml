@{
    ViewData["Title"] = "Login";
    Layout = "_VoidLayout";
}

<div class="w-full h-100">
    <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12 mb-2">OwnerGPT's Control Panel</h1>
    <form class="mt-6" action="@Url.Action("SignIn", "Account")" method="post">
        <div>
            <label class="block text-gray-700">Email Address</label>
            <input value="admin@domain.com" type="email" name="identifier" placeholder="Enter Email Address" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete required>
        </div>
        <div class="mt-4">
            <label class="block text-gray-700">Password</label>
            <input value="admin" type="password" name="password" placeholder="Enter Password" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" required>
        </div>
        <hr class="my-6 border-gray-300 w-full">
        <p class="mt-8">
            Need An Account? <a href="#" class="text-blue-500 cursor-not-allowed hover:text-blue-700 font-semibold"> Request An Access </a>
        </p>
        <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg px-4 py-3 mt-6">
            Log In
        </button>
    </form>
</div>