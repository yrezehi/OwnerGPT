@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OwnerGPT Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <!-- TODO: Siwtch back to ~/dist/site.css on deployment -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper-container">

        <main role="main">
            <section class="flex flex-col md:flex-row h-screen items-center">

                <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
                    <div alt="" class="w-full h-full object-cover">
                        <div class="h-[100%] w-[100%] absolute overflow-hidden">

                        @await Html.PartialAsync("_DynamicBackground")
                        
                    </div>
                </div>
                </div>

                <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12 flex items-center justify-center z-10">
                    <div class="w-full h-100">
                        <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12 mb-2">Admin Dashboard</h1>
                        <form class="mt-6" action="@Url.Action("Index", "Home")" method="get">
                            <div>
                                <label class="block text-gray-700">Email Address</label>
                                <input value="admin@domain.com" type="email" name="" id="" placeholder="Enter Email Address" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus autocomplete required>
                            </div>
                            <div class="mt-4">
                                <label class="block text-gray-700">Password</label>
                                <input value="admin" type="password" name="" id="" placeholder="Enter Password" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" required>
                            </div>
                            <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg px-4 py-3 mt-6">
                                Log In
                            </button>
                        </form>
                        <hr class="my-6 border-gray-300 w-full">
                        <p class="mt-8">
                            Need an account? 
                            <a href="#" class="text-blue-500 hover:text-blue-700 font-semibold"> Request an access </a>
                        </p>
                    </div>
                </div>

            </section>
        </main>

        <footer></footer>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
