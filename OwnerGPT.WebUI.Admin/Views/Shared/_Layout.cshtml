                            </svg>
                        </a>

                    </div>
                    <div class="mb-3">
                        <a class="flex items-center justify-center w-12 h-12 rounded @(ViewContext.HttpContext.Request.Path.ToString().Equals(Url.Action("Tutorial", "Home")) ? "bg-gray-100" : "hover:bg-gray-100")" href="@Url.Action("Tutorial", "Home")">
                            <svg class="w-6 h-6 stroke-current" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9h2v5m-2 0h4M9.408 5.5h.01M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                            </svg>
                        </a>
                        <a class="flex items-center justify-center w-12 h-12 mt-3 rounded @(ViewContext.HttpContext.Request.Path.ToString().Equals(Url.Action("Manager", "Account")) ? "bg-gray-100" : "hover:bg-gray-100")" href="@Url.Action("Manager", "Account")">
                            <svg class="w-6 h-6 stroke-current" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 15">
