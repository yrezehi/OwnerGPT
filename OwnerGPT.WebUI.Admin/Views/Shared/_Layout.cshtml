                </div>
            </div>
        </header>

        <main class="relative m-[2rem] ml-[105px]" role="main">
            @RenderBody()
        </main>

        <footer></footer>
    </div>

    <!-- 3rd party libraries -->
    <script src="~/lib/polipop/polipop.min.js" asp-append-version="true"></script>
    <!-- TODO: Siwtch back to on prime on deployment -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"></script>

    <!-- scripts -->
    <script src="~/js/globals.js" asp-append-version="true"></script>
    <script src="~/js/utility.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/partial_view_loader.js" asp-append-version="true"></script>
    <script src="~/js/notification.js" asp-append-version="true"></script>
    <script src="~/js/exceptions.js" asp-append-version="true"></script>
    <script src="~/js/fetch.js" asp-append-version="true"></script>
    <script src="~/js/binding.js" asp-append-version="true"></script>

    <script>
        globalProperties.set("baseurl", "@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.PathBase}")");
        globalProperties.set("version", "@(ConfigurationUtil.GetValue<string>("VERSION"))");
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
