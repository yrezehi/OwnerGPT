                        </a>
                        <div class="flex items-center cursor-pointer justify-center w-12 h-8 mt-2 rounded hover:bg-gray-100" href="@Url.Action("Manager", "Account")">
                            <p class="mt-1 font-extralight text-center">
                                v@(ConfigurationUtil.GetValue<string>("VERSION"))
                            </p>
                        </div>
